<% if cloudinary %>
<div class="banner" style="background-image: url('<%= cl_image_path image %>');">
<% else %>
<div class="banner" style="background-image: url('<%= image %>');">
<% end %>
  <div class="banner-content">
    <h1>
      <%= header %>
    </h1>
    <% if form %>
    <div class="banner-search">
      <%= form_tag("/meals", method: "get") do %>
      <%= text_field_tag(:query, "", placeholder: placeholder) %>
      <%= submit_tag("Search", class: "btn") %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>