<% @meal.photos.any? ? image = @meal.photos.first.path : image = "https://unsplash.it/1700/600" %>

<%= render partial: "shared/banner", 
locals: { 
  form: false, 
  header: @meal.title, 
  image: image,
  cloudinary: true
} %>

<% @meal.photos.each do |photo| %>
  <%= cl_image_tag photo.path, width: 300, height: 200, crop: :fill %>
<% end %>

<%= link_to 'Order', new_meal_order_path(@meal) %>
